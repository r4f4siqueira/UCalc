<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4C4C4C"
    tools:context=".segunda">

    <TextView
        android:id="@+id/tvnumeros"
        android:layout_width="359dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="#8CCA45"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="124dp"
        android:onClick="bt7"
        android:text="7"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvnumeros" />

    <Button
        android:id="@+id/btac"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#00BCD4"
        android:onClick="btAC"
        android:text="AC"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvnumeros" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:onClick="bt4"
        android:text="4"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt7" />

    <Button
        android:id="@+id/btdivide"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFEB3B"
        android:onClick="btDivide"
        android:text="/"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/btigual"
        app:layout_constraintTop_toBottomOf="@+id/btmenos" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:onClick="bt0"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt1" />

    <Button
        android:id="@+id/btsoma"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="#FFEB3B"
        android:onClick="btMais"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/btigual"
        app:layout_constraintTop_toBottomOf="@+id/tvnumeros" />

    <Button
        android:id="@+id/btmenos"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFEB3B"
        android:onClick="btMenos"
        android:text="-"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/btigual"
        app:layout_constraintTop_toBottomOf="@+id/bt9" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="124dp"
        android:onClick="bt9"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/bt8"
        app:layout_constraintTop_toBottomOf="@+id/tvnumeros" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:onClick="bt5"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/bt4"
        app:layout_constraintTop_toBottomOf="@+id/bt8" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:onClick="bt8"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/bt7"
        app:layout_constraintTop_toBottomOf="@+id/tvnumeros" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:onClick="bt6"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/bt5"
        app:layout_constraintTop_toBottomOf="@+id/bt9" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:onClick="bt1"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt4" />

    <Button
        android:id="@+id/btigual"
        android:layout_width="131dp"
        android:layout_height="57dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4CAF50"
        android:onClick="btIgual"
        android:text="="
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/bt0"
        app:layout_constraintTop_toBottomOf="@+id/bt3" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:onClick="bt3"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/bt2"
        app:layout_constraintTop_toBottomOf="@+id/bt6" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:onClick="bt2"
        android:text="2"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/bt1"
        app:layout_constraintTop_toBottomOf="@+id/bt5" />

    <Button
        android:id="@+id/btmultiplica"
        android:layout_width="59dp"
        android:layout_height="67dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFEB3B"
        android:onClick="btMultiplica"
        android:text="x"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/btigual"
        app:layout_constraintTop_toBottomOf="@+id/btdivide" />

</androidx.constraintlayout.widget.ConstraintLayout>